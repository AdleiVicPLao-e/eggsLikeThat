{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trade",
  "description": "Trade listing schema for PetVerse marketplace",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the trade"
    },
    "seller": {
      "type": "string",
      "description": "Wallet address of the seller"
    },
    "buyer": {
      "type": ["string", "null"],
      "description": "Wallet address of the buyer (if sold)"
    },
    "pet": {
      "type": "string",
      "description": "ID of the pet being traded"
    },
    "price": {
      "type": "number",
      "description": "Asking price for the pet",
      "minimum": 0.001,
      "maximum": 1000
    },
    "currency": {
      "type": "string",
      "description": "Currency for the trade",
      "enum": ["ETH", "MATIC", "USDC"],
      "default": "ETH"
    },
    "status": {
      "type": "string",
      "description": "Current status of the trade",
      "enum": ["listed", "sold", "cancelled", "expired"],
      "default": "listed"
    },
    "blockchainListingId": {
      "type": ["string", "null"],
      "description": "Blockchain listing ID (if on-chain)"
    },
    "transactionHash": {
      "type": ["string", "null"],
      "description": "Blockchain transaction hash (if completed)"
    },
    "listedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the pet was listed"
    },
    "soldAt": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When the pet was sold"
    },
    "cancelledAt": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When the listing was cancelled"
    },
    "marketplaceFee": {
      "type": "number",
      "description": "Marketplace fee percentage",
      "minimum": 0,
      "maximum": 1,
      "default": 0.025
    },
    "royaltyFee": {
      "type": "number",
      "description": "Royalty fee percentage",
      "minimum": 0,
      "maximum": 1,
      "default": 0.01
    },
    "petDetails": {
      "type": "object",
      "description": "Details of the pet being traded",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the pet"
        },
        "tier": {
          "type": "string",
          "enum": ["COMMON", "UNCOMMON", "RARE", "EPIC", "LEGENDARY"]
        },
        "type": {
          "type": "string",
          "enum": ["FIRE", "WATER", "EARTH", "AIR", "LIGHT", "DARK"]
        },
        "level": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        },
        "stats": {
          "type": "object",
          "properties": {
            "attack": { "type": "integer" },
            "defense": { "type": "integer" },
            "speed": { "type": "integer" },
            "health": { "type": "integer" }
          }
        },
        "abilities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "required": [
    "id",
    "seller",
    "pet",
    "price",
    "currency",
    "status",
    "listedAt"
  ],
  "additionalProperties": false
}
